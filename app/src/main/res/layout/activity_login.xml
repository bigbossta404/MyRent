<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/headlogin"
            android:layout_width="290dp"
            android:layout_height="190dp"
            android:layout_marginTop="-40dp"
            app:srcCompat="@drawable/headlogin"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/welcomeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Welcome Back!"
            android:textColor="#fff"
            android:textSize="35sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/username"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:ems="10"
            android:fontFamily="@font/reguler"
            android:hint="username"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/password"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="#fff"
            android:ems="10"
            android:fontFamily="@font/reguler"
            android:hint="******"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/masuk"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="#0096C5"
            android:fontFamily="@font/bold"
            android:text="Masuk"
            android:textColor="#fff"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/reguler"
            android:text="Belum punya akun? Daftar"
            android:textColor="#2785FF"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/batas"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/batas"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/loginfb"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="17dp"
            android:background="#475993"
            android:drawableLeft="@drawable/fb"
            android:fontFamily="@font/bold"
            android:paddingStart="20dp"
            android:text="Login dengan facebook"
            android:textColor="#fff"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/logingoogle"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="#fff"
            android:drawableLeft="@drawable/google"
            android:fontFamily="@font/bold"
            android:paddingStart="20dp"
            android:text="Login dengan facebook"
            android:textColor="#000"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
