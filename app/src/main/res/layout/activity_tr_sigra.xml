<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_terpilih"
    tools:context=".tr_sigra">

    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kembali"
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/kembali"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bold"
            android:layout_marginTop="-40dp"
            android:text="Daihatsu Sigra"
            android:textColor="#fff"
            android:textSize="28dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/reguler"
            android:text="2016"
            android:textColor="#fff"
            android:textSize="20dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="327dp"
            android:layout_height="290dp"
            android:src="@drawable/detail_top_sigra"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="327dp"
            android:layout_height="270dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/detail_tr"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"/>
        <Button
            android:id="@+id/pesan_sigra"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="-80dp"
            android:background="#0096C5"
            android:fontFamily="@font/bold"
            android:layout_gravity="center"
            android:text="PESAN"
            android:textColor="#fff"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/berangkat"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="-180dp"
            android:layout_marginStart="60dp"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="15dp"
            android:hint="Mm/Dd/Yy" />

        <EditText
            android:id="@+id/berngkat"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="-41dp"
            android:layout_marginEnd="60dp"
            android:layout_gravity="right"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="15dp"
            android:hint="Mm/Dd/Yy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Berangkat"
            android:textSize="15dp"
            android:fontFamily="@font/bold"
            android:layout_marginTop="-60dp"
            android:layout_marginStart="60dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Kembali"
            android:textSize="15dp"
            android:fontFamily="@font/bold"
            android:layout_marginTop="-24dp"
            android:layout_marginEnd="60dp"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/birunavbar"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>