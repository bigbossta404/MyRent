<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_register"
    tools:context=".register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kembali"
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            app:srcCompat="@drawable/kembali"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bold"
            android:text="Daftar Akun"
            android:textColor="#fff"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/reg_nama"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="31dp"
            android:background="#fff"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/reguler"
            android:hint="Nama Lengkap"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:textSize="18dp"
            tools:ignore="Autofill,MissingConstraints" />

        <EditText
            android:id="@+id/reg_identitas"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/reguler"
            android:hint="NIK / SIM"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/reguler"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/reguler"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/reg_repass"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/reguler"
            android:hint="Re-Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/lanjut"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:background="#0096C5"
            android:fontFamily="@font/bold"
            android:text="lanjut"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>